<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <h1>Products#index</h1>
      <h2>Plants</h2>
      <ul>
        <% @plants.each do |plant| %>
          <li>
            <%= link_to (plant.id_code + " - " + plant.gender + " " + plant.species), product_path(plant) %>
          </li>
        <% end %>
      </ul>


      <h2>Pots</h2>
      <ul>
        <% @pots.each do |pot| %>
          <li>
            <%= link_to (pot.id.to_s + " - " + pot.name + " - " + pot.material + " - " + pot.color), product_path(pot) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Create a new product", new_product_path,class: "btn btn-primary"  %>
    </div>
  </div>
</div>