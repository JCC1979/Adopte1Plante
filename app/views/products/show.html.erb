<div class="container">
        <div class="grid">
            <div class="product-content">
                <h1>Product#show</h1>
                <% if @product.category.name == "plant" %>
                    <h3><%= @product.gender + " " + @product.species %><em><%= @product.species %></em><%= @product.variant %></h3>
                    <ul>
                        <li> Taxref_id : <%= @product.id_code %>    </li>
                        <li> Family : <%= @product.family %>    </li>
                        <li> Gender : <%= @product.gender %>    </li>
                        <li> Species : <%= @product.species %>    </li>
                        <li> Cultivar : <%= @product.cultivar %>    </li>
                        <li> Variant : <%= @product.variant %>    </li>
                        <li> Sun exposure : <%= @product.sun_exposure %>    </li>
                        <li> Watering : <%= @product.watering %>    </li>
                        <li> Description : <%= @product.description %>    </li>
                    </ul> 
                <% elsif @product.category.name == "pot" %>
                    <h3><%= @product.name %></h3>
                    <ul>
                        <li> Material : <%= @product.material %>    </li>
                        <li> Color : <%= @product.color %>    </li>
                    </ul> 
                <% end %>
                <%= link_to "Create a variant", new_product_variant_path(@product.id),class: "btn btn-primary" %>

                <% @variants.each do |var| %>
                    <% if var.height_format == "L" %>
                        <div class="product-variant1">
                            <div class="card" class="col">
                                <%= cl_image_tag(var.findphotovariant.image_id, crop: :fill, width: 180, class: "card-img-top") %>
                                <p class="card-text text-center"><%= var.sku %> - <%= var.height_format %> - <%= var.diameter_cm.to_s %> cm</p>
                            </div>
                        </div>
                    <% elsif var.height_format == "M" %>
                        <div class="product-variant2">
                            <div class="card" class="col">
                                <%= cl_image_tag(var.findphotovariant.image_id crop: :fill, width: 180, class: "card-img-top") %>
                                <p class="card-text text-center"><%= var.sku %> - <%= var.height_format %> - <%= var.diameter_cm.to_s  %> cm</p>
                            </div>
                        </div>
                    <% else %>
                        <div class="product-variant3">
                            <div class="card" class="col">
                                <%= cl_image_tag(var.findphotovariant.image_id, crop: :fill, width: 180, class: "card-img-top") %>
                                <p class="card-text text-center"><%= var.sku %> - <%= var.height_format %> - <%= var.diameter_cm.to_s  %> cm</p>
                            </div>
                        </div>
                    <% end %>
                <% end %>
        </div>
</div>