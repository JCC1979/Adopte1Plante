<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-md-4 animated bounceIn">
      <div class="form-login" style = "background-image: linear-gradient(rgba(255, 255, 255, 0.800), rgba(255, 255, 255, 0.800)), url(<%=image_path("homedownpage.jpg")%>)"
      <h2>Welcome back</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>