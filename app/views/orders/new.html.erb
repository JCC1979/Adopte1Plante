<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-1">
      <%= cl_image_tag(@composition.photo, class: "img-fluid") %>
    </div>
    <div class="col-md-5">
      <%= simple_form_for([@profile,@order]) do |f| %>
        <%= f.input :composition_nickname,label: 'Donnez un nom a votre plante' %>
        <%= f.input :composition_id, as: :hidden, input_html: { value: @composition.id } %>
        <%= f.submit "Adopter", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>