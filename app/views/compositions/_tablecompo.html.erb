<div>
  <div class="row">
    <div class="col text-center">
      <%= render 'cardvariant', variant: plant.givevariant("M"), format: "M" %>
    </div>
    <div class="col">
      <p class="text-center"><strong>Association with "POT"</strong></p>
      <p class="text-center"><%= pot.id.to_s + " - " + pot.name + " - " + pot.material + " - " + pot.color %></p>
    </div>
    <div class="col text-center">
      <%= render 'cardvariant', variant: pot.givevariant("M"), format: "M" %>
    </div>
  </div>
</div> 

<br/>

<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">"<%= pot.skuforpot("S") %>"</th>
        <th scope="col">"<%= pot.skuforpot("M") %>"</th>
        <th scope="col">"<%= pot.skuforpot("L") %>"</th>
      </tr>
    </thead>
    <tbody>

      <tr>
        <th scope="row">
          <p>Plant/L</p>
          <p>"<%= plant.skuforplant("L") %>"</p>
        </th>
        <td>
        </td>
        <td>
        </td>
        <td>
          <% photo = Composition.findphoto({variant_pot_sku: pot.skuforpot("L"), variant_plant_sku: plant.skuforplant("L")}) %>
          <%= cl_image_tag(photo, width: 100, height: 100, class: "mx-auto d-block") %> 
        </td>
      </tr>

      <tr>
        <th scope="row">
          <p>Plant/M</p>
          <p>"<%= plant.skuforplant("M") %>"</p>
        </th>
        <td>
        </td>
        <td>
          <% photo = Composition.findphoto({variant_pot_sku: pot.skuforpot("M"), variant_plant_sku: plant.skuforplant("M")}) %>
          <%= cl_image_tag(photo, width: 100, height: 100, class: "mx-auto d-block") %> 
        </td>
        <td>
        </td>
      </tr>

      <tr>
        <th scope="row">
          <p>Plant/S</p>
          <p>"<%= plant.skuforplant("S") %>"</p>
        </th>
        <td>
          <% photo = Composition.findphoto({variant_pot_sku: pot.skuforpot("S"), variant_plant_sku: plant.skuforplant("S")}) %>
          <%= cl_image_tag(photo, width: 100, height: 100, class: "mx-auto d-block") %> 
        </td>
        <td>
        </td>
        <td>
        </td>
      </tr>

    </tbody>
  </table>
</div>