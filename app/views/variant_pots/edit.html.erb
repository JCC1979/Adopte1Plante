<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3">
      <h1>VariantPot#modify</h1>
      <h2>Format <%= @variant_pot.height_format %></h2>
      <%= simple_form_for @variant_pot, url: variant_pot_path(@variant_pot), method: :patch do |f| %>
        <%= f.input :sku %>
        <%= f.input :diameter_cm %>
        <%= f.input :height_format, as: :hidden, input_html: { value: @variant_pot.height_format } %>
        <%= f.input :price %>
        <label>Modify photo file</label>
        <input type="file" name="photo_file_variant" class="form-control-file" value=<%= @variant_pot.findphoto %>></input>
        <br/>
        <%= f.submit "Modify", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>