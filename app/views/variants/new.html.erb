<% content_for :before_html do %>
  <%= cloudinary_js_config %>
<% end %>

<h1>Cr√©ation variant</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <p><strong>Add a new variant of <%= @product.category.name.upcase %></strong></p>
      <%= simple_form_for [@product, @variant] do |f| %>
        <%= f.input :sku %>
        <%= f.input :diameter_cm %>
        <%= f.input :height_format, collection: ["L","M", "S"] %>
        <%= cl_image_upload_tag(:image_id) %>
        <%= f.submit "add", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(function() {
    if($.fn.cloudinary_fileupload !== undefined) {
      $("input.cloudinary-fileupload[type=file]").cloudinary_fileupload();
    }
  });
</script>